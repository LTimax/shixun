<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE3E3E3"
    tools:context=".post.ui.message.chat.ui.ChatActivity"
    >
    <include
        android:id="@+id/ly_retrieve_bar"
        layout="@layout/activity_login_navigation_bar" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_content_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/edit_chat_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/type_something"
            android:maxLength="120"
            android:textIsSelectable="true"
            />
        <Button
            android:id="@+id/send_test_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Send_test_1"/>
    </LinearLayout>

</LinearLayout>